@using TallyJ.Code.Enumerations
@using TallyJ.Code.Resources
@using TallyJ.Code.Session
@model PeopleModel
@{
  ContextItems.AddJavascriptForPage("pageUrl", "reconcilePage.controllerUrl={0};".FilledWith(Url.Action("Index").QuotedForJavascript()));
  ContextItems.AddJavascriptForPage("beforeUrl", "reconcilePage.beforeUrl={0};".FilledWith(Url.Action("Index", "Before").QuotedForJavascript()));
}
<div class="PullInstructions">
  <ol>
    <li>This shows a list of ballot envelopes in the order that they will be shown on the Roll Call screen. It may be helpful to sort the ballots in this order before starting the roll call.</li>
  </ol>
</div>
<div class="btnRefreshDiv">
  <button type="button" id="btnRefresh" class="btn">Refresh</button>
</div>
<div class="@(ContextItems.LocationModel.HasLocations ? "" : "Hidden")">
  Showing who voted at:
  <select id="locations">
    <option value="-1">[All Locations]</option>
    @ContextItems.LocationModel.GetLocationOptions()
  </select>
</div>

<div class="Totals Count">
  <div id="Totals"></div>
</div>
<div id="lists">
</div>
