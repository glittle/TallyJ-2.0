@using TallyJ.Code
@using TallyJ.Code.Enumerations
@using TallyJ.Code.Session
@using TallyJ.CoreModels
@using TallyJ.EF
@{
  var ballots = new BallotCacher().AllForThisElection;
  var votes = new VoteCacher().AllForThisElection.Where(v => v.InvalidReasonGuid == null);
  var election = UserSession.CurrentElection;
  var isSingleNameElection = election.IsSingleNameElection;

  var message = "";
  if (isSingleNameElection)
  {
    message = "This report is not relevant for single name elections.";
  }

  var currentElection = UserSession.CurrentElection;
  var numElected = currentElection.NumberToElect.AsInt();

  var slots = new List<int>();
  for (int i = 0; i <= numElected; i++)
  {
    slots.Add(i);
  }

  var elected = new ResultCacher().AllForThisElection
    .OrderBy(r => r.Rank)
    .Take(numElected)
    .Select(r => r.PersonGuid)
    .ToList();


  var aligned = slots.JoinMatchingOrNull(ballots.Select(b => votes.Where(v => v.BallotGuid == b.BallotGuid).Count(v => v.PersonGuid.HasValue && elected.Contains(v.PersonGuid.Value)))
    .GroupBy(i => i, (i, ints) => new { i, sum = ints.Count() }), i => i, g => g.i, (i, g) => new { i, sum = g==null ? 0 : g.sum })
    .OrderByDescending(g => g.i);
}
<style>
  .Ballots td {
    text-align: center;
  }

  .Ballots th {
    max-width: 200px;
    text-align: center;
    vertical-align: bottom;
  }
</style>
<div class="body">
  <h1 id="title"></h1>
  <p class="Comment">
    A count of the alignment of ballots to the final results.  For example, the first row shows how many people voted for all @numElected of the elected.
  </p>
  @if (message.HasContent())
  {
    <div>@message</div>
  }
  else
  {
    <table class="Ballots">
      <thead>
        <tr>
          <th>Number of Votes Matching Final Result</th>
          <th>Number of Ballots</th>
        </tr>

      </thead>
      <tbody>
        @foreach (var alignment in aligned)
        {
          <tr>
            <td>@alignment.i</td>
            <td>@alignment.sum</td>
          </tr>
        }
      </tbody>
    </table>
  }
</div>